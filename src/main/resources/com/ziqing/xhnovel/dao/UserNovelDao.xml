<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ziqing.xhnovel.dao.UserNovelDao">
    <resultMap id="unMap" type="com.ziqing.xhnovel.bean.UserNovel">
        <id property="id" column="id"/>
        <result property="uid" column="uid" />
        <result property="nid" column="nid" />
    </resultMap>


    <insert id="insert" parameterType="com.ziqing.xhnovel.bean.UserNovel" useGeneratedKeys="true" keyProperty="id">
        insert into user_novel(uid, nid) values (#{uid}, #{nid})
    </insert>

    <update id="update" parameterType="com.ziqing.xhnovel.bean.UserNovel">
        update user_novel set uid=#{uid},nid=#{nid} where id=#{id}
    </update>

    <select id="query" resultMap="unMap">
        select id, uid, nid from user_novel where uid = #{uid} and nid = #{nid}
    </select>

    <select id="queryByUid" resultMap="unMap">
        select id, uid, nid from user_novel where uid = #{uid}
    </select>

    <delete id="delete">
        delete from user_novel where nid=#{nid} and uid=#{uid}
    </delete>

</mapper>