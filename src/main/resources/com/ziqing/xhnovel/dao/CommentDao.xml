<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ziqing.xhnovel.dao.CommentDao">
    <resultMap id="CommentDOMap" type="com.ziqing.xhnovel.bean.CommentEntity">
        <id  column="id" property="id"/>
        <result  column="commentator_id" property="commentatorId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="insertComment" parameterType="com.ziqing.xhnovel.bean.CommentEntity" useGeneratedKeys="true" keyProperty="id">
        insert into comment(
            commentator_id, user_id, content, gmt_created, gmt_modified
        )
        values (
            #{commentator}, #{userId}, #{content}, now(), now()
        )
    </insert>

    <select id="loadCommentsByUserId" resultMap="CommentDOMap">
        select id, commentator_id, user_id, content, gmt_created, gmt_modified from comment where user_id=#{userId}
    </select>


</mapper>