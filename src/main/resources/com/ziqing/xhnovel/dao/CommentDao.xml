<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ziqing.xhnovel.dao.CommentDao">
    <resultMap id="commentDOMap" type="com.ziqing.xhnovel.bean.CommentEntity">
        <id  column="id" property="id"/>
        <result  column="commentator_id" property="commentatorId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="insertComment" parameterType="com.ziqing.xhnovel.bean.CommentEntity" useGeneratedKeys="true" keyProperty="id">
        insert into comment(
            commentator_id, user_id, content, gmt_created, gmt_modified
        )
        values (
            #{commentatorId}, #{userId}, #{content}, now(), now()
        )
    </insert>

    <select id="loadCommentsByUserId" resultMap="commentDOMap">
        select id, commentator_id, user_id, content, gmt_created, gmt_modified from comment where user_id=#{userId}
    </select>


    <select id="pageQueryAll" resultType="java.lang.Integer">
        select count(*) from comment
        <if test="userId!=null">
            where user_id = #{userId}
        </if>
        <if test="commentatorId!=null">
            where commentator_id = #{commentatorId}
        </if>
    </select>

    <select id="pageQuery" resultMap="commentDOMap">
        select * from comment
        <if test="userId!=null">
            where user_id = #{userId}
        </if>
        <if test="commentatorId!=null">
            where commentator_id = #{commentatorId}
        </if>
        <bind name="currentPage" value="pagination*pageSize"/>
        limit #{currentPage},#{pageSize}
    </select>

    <delete id="removeComment">
        delete from comment where id=#{id}
    </delete>


</mapper>